@model List<UserViewModel>
@{
    ViewData["Title"] = "UserManage";

    void CardTag(int id)
    {
        switch (id)
        {
            case 1:
                <span class="badge bg-warning">QA</span>
                break;
            case 2:
                <span class="badge bg-info">RD</span>
                break;
            case 3:
                <span class="badge bg-danger">PM</span>
                break;
            default:
                <span>😎</span>
                break;
        }
    }
}

<div class="">
    <a asp-action="Add" class="btn btn-primary mb-2">新增</a>
    <div class="card shadow p-3">
        <table class="table table-striped table-bordered text-center">
            <thead class="table-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Role</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <td>@item.Name</td>
                        <td>
                            @{
                                CardTag(item.RoleId);
                            }
                        </td>
                        <td>
                            <a onclick="return confirm('確定刪除嗎?');" class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@item.Id">刪除</a>
                            <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-Id="@item.Id">編輯</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts{
<script type="text/javascript">

</script>
}
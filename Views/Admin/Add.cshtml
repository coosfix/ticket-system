@model UserViewModel
@{
    ViewData["Title"] = "UserManage Add";
}
@section Styles{
<style>
    .form-label {
        margin-top: .5rem
    }
</style>
}
<div class="h-100 d-flex justify-content-center align-items-center">
    <div class="card shadow p-3">
        <form asp-action="Add" method="post">
            <div class="">
                <label asp-for=" Name" class="form-label">Name</label>
                <input type="text" asp-for="Name" class="form-control">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="">
                <label asp-for="Password" class="form-label">Password</label>
                <input type="text" asp-for="Password" class="form-control">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="">
                <label asp-for="RoleId" class="form-label"></label>
                <select asp-items="@TempData["RoleItems"] as List<SelectListItem>" asp-for="RoleId" class="form-select">
                </select>
            </div>
            <button type="submit" class="btn btn-primary mt-2">新增</button>
        </form>
    </div>
</div>

@section Scripts{
@{
await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}

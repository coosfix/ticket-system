<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ticket_System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @await RenderSectionAsync("Styles", required: false)

</head>
<body>
    <header>
        <nav class="navbar navbar-light bg-light shadow">
            <div class="container">
                <a class="navbar-brand p-2" asp-controller="Ticket" asp-action="Index">Ticket_System</a>
                <div>
                    @await Component.InvokeAsync("UserStatu")
                    <a class="btn btn-sm btn-danger" asp-area="" asp-controller="Login" asp-action="Logout">登出</a>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="py-3">
            @RenderBody()
        </main>
    </div>

